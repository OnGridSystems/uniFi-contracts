{
  "name": "UniFi_contracts",
  "version": "1.0.0",
  "description": "UniFi Ethereum contracts",
  "main": "hardhat.config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "hardhat compile",
    "console": "hardhat console",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "prettier": "prettier --write test/*.js && prettier --write contracts/*.sol contracts/*/*.sol",
    "solhint": "solhint -c .solhint.json contracts/*.sol contracts/*/*.sol",
    "solium": "solium -d contracts",
    "lint": "yarn prettier && yarn solhint && yarn solium"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OnGridSystems/UniFi_contracts.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OnGridSystems/UniFi_contracts/issues"
  },
  "homepage": "https://github.com/OnGridSystems/UniFi_contracts#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "ethlint": "^1.2.5",
    "hardhat": "^2.4.1",
    "hardhat-deploy": "^0.8.11",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.2.0"
  },
  "resolutions": {
    "eth-lib": "0.2.8",
    "diff": "3.5.0"
    }
}
